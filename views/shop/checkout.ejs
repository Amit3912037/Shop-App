    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
            <% if (products.length > 0) { %>
                <ul class="cart__item-list">
                    <% products.forEach(p => { %>
                        <li class="cart__item">
                            <h1><%= p.productId.title %></h1>
                            <h2>â‚¹ <%=p.productId.price.toFixed(2)%></h2>
                            <h2>quantity: <%= p.quantity %></h2>
                        </li>
                    <% }) %>
                </ul>
                <hr>
                <div class="centered">
                    <h2>Total: <%=totalSum%></h2>
                </div>
